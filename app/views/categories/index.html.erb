<%= content_for(:content_header, 'Manu Category List')%>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header custom">
        <div class="box-tools">
          <div class="col-md-12">
            <%= link_to new_category_path(format: 'js'), class: 'btn btn-block btn-sm btn-custom margin_left20', data: { target: "#modalDialog", toggle: "modal" } do %>
              <i class="fa fa-plus"></i> &nbsp; Add new menu category
            <% end %>
          </div>
        </div>
      </div>
      <div class="clear"></div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tbody>
            <tr>
              <th>No</th>
              <th>Name</th>
              <th>Created at</th>
              <th></th>
            </tr>
            <% if !@categories.blank? %>
              <% counter = 1 %>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= counter %></td>
                  <td><%= category.name %></td>
                  <td><%= category.created_at.strftime('%d, %b %Y') %></td>
                  <td class="text-right">
                    <%= link_to edit_category_path(id: category.id, format: 'js'), class: 'btn btn-sm btn-primary', data: { target: "#modalDialog", toggle: "modal" } do %>
                      <i class="fa fa-pencil"></i> Edit
                    <% end %>
                    <%= link_to category_path(category.id), method: :delete, class: 'btn btn-sm btn-danger' do %>
                      <i class="fa fa-trash"></i> Delete
                    <% end %>
                  </td>
                </tr>
                <% counter += 1 %>
              <% end %>
            <% else %>
              <tr>
                <td colspan="4" class="text-center"><strong>No Data</strong></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
