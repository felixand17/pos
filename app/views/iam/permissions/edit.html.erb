<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">
    <%= form_for ['iam', @permission], method: :put, html: { class: 'form-horizontal' } do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create Permission</h4>
      </div>
      <div class="modal-body">
        <div class="form-group row">
          <label class="col-md-12">Name <span class="required">*</span></label>
          <div class="col-md-12">
            <%= f.text_field :name, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Subject Class <span class="required">*</span></label>
          <div class="col-md-12">
            <%= f.text_field :subject_class, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Action <span class="required">*</span></label>
          <div class="col-md-12">
            <%= f.text_field :action, class: 'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-success">
          <i class="fa fa-check"></i> Save
        </button>
      </div>
    <% end %>
  </div>
</div>
