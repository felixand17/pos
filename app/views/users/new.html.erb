<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">
    <%= form_for @user, class: 'form-horizontal' do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create User</h4>
      </div>
      <div class="modal-body">
        <div class="form-group row">
          <label class="col-md-12">Role</label>
          <div class="col-md-12">
            <%= f.select :role_id, @roles, { include_blank: 'Choose Role' }, { class: 'form-control', required: true } %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Email</label>
          <div class="col-md-12">
            <%= f.email_field :email, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Name</label>
          <div class="col-md-12">
            <%= f.text_field :name, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-xs-6">Password</label>
          <label class="col-xs-6">Password Confirmation</label>
          <div class="col-xs-6">
            <%= f.password_field :password, class: 'form-control', required: true %>
          </div>
          <div class="col-xs-6">
            <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-success">
          <i class="fa fa-check"></i> Save
        </button>
      </div>
    <% end %>
  </div>
</div>
