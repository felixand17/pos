<%= content_for(:content_header, 'Order List')%>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="col-xs-12">
        <br/>
        <div class="box smooth-border collapsed-box">
          <div class="box-header with-border">
            <h3 class="box-title">Filter</h3>

            <div class="box-tools pull-right">
              <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
              </button>
            </div>
          </div>
          <div class="box-body">
            <%= form_tag orders_path, method: 'get', class: 'form-horizontal filter-search'  do %>
              <div class="col-xs-12">
                <div class="col-md-3">
                  <div class="form-group">
                    <%= text_field_tag  :start_date, params[:start_date], class: 'form-control datepicker', data: { 'date-format': 'yyyy-mm-dd' }, placeholder: 'Order Date' %>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group">
                    <%= select_tag(:status, options_for_select(Order::STATUS, params[:status]), prompt: "Order Status", class: 'form-control') %>
                  </div>
                </div>
                <div class="clear"></div>
                <div class="col-md-2 pull-right">
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                      <span class="fa fa-search" aria-hidden="true"></span> &nbsp; Apply
                    </button>
                  </div>
                </div>
                <div class="col-md-2 pull-right">
                  <div class="form-group">
                    <%= link_to orders_path, class: 'btn btn-default btn-block' do %>
                      <i class="fa fa-refresh"></i> Reset
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="clear"></div>

      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tbody>
            <tr>
              <th>No</th>
              <th>#Number</th>
              <th>Customer</th>
              <th>Order Date</th>
              <th>Status</th>
            </tr>
            <%= render 'orders/shared/list' %>
         </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
