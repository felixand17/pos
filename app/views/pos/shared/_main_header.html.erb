<header class="main-header">
  <nav class="navbar navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to pos_orders_path, class: 'navbar-brand' do %>
          <b>KUKU</b>MAMA
        <% end %>
        <div class="navbar-custom-menu">
          <ul class="nav navbar-nav pull-right">
            <% if current_user.waitres? %>
              <!-- Notifications Menu -->
              <li class="dropdown notifications-menu">
                <!-- Menu toggle button -->
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="fa fa-bell-o"></i>
                  <span class="label label-warning totalNotification"><%= notifications.count %></span>
                </a>
                <ul class="dropdown-menu">
                  <li class="header">
                    You have <span class="totalNotification"><%= notifications.count %></span> notifications
                  </li>
                  <li>
                    <!-- Inner Menu: contains the notifications -->
                    <ul class="menu" id="contentNotification">
                      <%= render 'shared/notifications' %>
                    </ul>
                  </li>
                  <li class="footer">
                    <%= link_to 'View all', notifications_path %>
                  </li>
                </ul>
              </li>
            <% end %>
            <!-- User Account Menu -->
            <li class="dropdown user user-menu">
              <!-- Menu Toggle Button -->
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-bars"></i>
              </a>
              <ul class="dropdown-menu">
                <!-- The user image in the menu -->
                <li class="user-header">
                  <%= image_tag 'no-avatar.png', class: 'img-circle', alt: 'User Image'  %>

                  <p>
                    <%= current_user.name %> - <%= current_user.role.name %>
                    <small>Member since <%= current_user.created_at.strftime('%B. %Y') %></small>
                  </p>
                </li>
                <!-- Menu Footer-->
                <li class="user-footer">
                  <div class="pull-right">
                    <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat' do %>
                      Sign out
                    <% end %>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </nav>
</header>
