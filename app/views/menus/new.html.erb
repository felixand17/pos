<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">
    <%= form_for @menu, html: { multipart: true, class: 'form-horizontal' } do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create Menu Category</h4>
      </div>
      <div class="modal-body">
        <div class="form-group row">
          <label class="col-md-12">Picture</label>
          <div class="col-md-12">
            <%= f.file_field :picture %>
            <%= f.hidden_field :picture_cache %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Category <span class="required">*</span></label>
          <div class="col-md-12">
            <%= f.select :category_id, @category, { include_blank: 'Choose Category' }, { class: 'form-control', required: true } %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Tenant <span class="required">*</span></label>
          <div class="col-md-12">
            <%= f.select :tenant_id, @tenants, { include_blank: 'Choose Tenant' }, { class: 'form-control', required: true } %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Name <span class="required">*</span></label>
          <div class="col-md-12">
            <%= f.text_field :name, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Description</label>
          <div class="col-md-12">
            <%= f.text_area :description, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Price <span class="required">*</span></label>
          <div class="col-md-12">
            <%= f.number_field :price, class: 'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-success">
          <i class="fa fa-check"></i> Save
        </button>
      </div>
    <% end %>
  </div>
</div>
