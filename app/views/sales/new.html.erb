<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">
    <%= form_for @sale, html: { class: 'form-horizontal' } do |f| %>
      <%= f.hidden_field :order_id %>
      <%= f.hidden_field :user_id %>
      <%= f.hidden_field :amount %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4>Total: <%= @sale.amount %></h4>
      </div>
      <div class="modal-body">
        <div class="form-group row">
          <label class="col-md-12">Payment Method <span class="required">*</span></label>
          <div class="col-md-12">
            <%= f.select :payment_method, [['CASH', 'CASH'], ['DEBIT', 'DEBIT']], { include_blank: 'Choose Category' }, { class: 'form-control' }, required: true %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Reference Number</label>
          <div class="col-md-12">
            <%= f.text_field :reference_number, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Payment</label>
          <div class="col-md-12">
            <%= f.number_field :payment, class: 'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-success">
          <i class="fa fa-check"></i> Save
        </button>
      </div>
    <% end %>
  </div>
</div>
