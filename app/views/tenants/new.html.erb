<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">
    <%= form_for @tenant, class: 'form-horizontal' do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create Tenant</h4>
      </div>
      <div class="modal-body">
        <div class="form-group row">
          <label class="col-md-12">Name of Tenant</label>
          <div class="col-md-12">
            <%= f.text_field :name, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-12">Description</label>
          <div class="col-md-12">
            <%= f.text_area :description, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-md-12">Phone Number</label>
          <div class="col-md-12">
            <%= f.text_field :phone_number, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-md-12">Identity Number</label>
          <div class="col-md-12">
            <%= f.text_field :identity_number, class: 'form-control' %>
          </div>
        </div>
        <hr>

        <%= f.fields_for :user do |user| %>
          <%= user.hidden_field :role_id, value: @role.id %>
          <div class="form-group row">
            <label class="col-md-12">Email</label>
            <div class="col-md-12">
              <%= user.email_field :email, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="form-group row">
            <label class="col-md-12">Name</label>
            <div class="col-md-12">
              <%= user.text_field :name, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="form-group row">
            <label class="col-xs-6">Password</label>
            <label class="col-xs-6">Password Confirmation</label>
            <div class="col-xs-6">
              <%= user.password_field :password, class: 'form-control', required: true %>
            </div>
            <div class="col-xs-6">
              <%= user.password_field :password_confirmation, class: 'form-control', required: true %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button class="btn btn-success">
          <i class="fa fa-check"></i> Save
        </button>
      </div>
    <% end %>
  </div>
</div>
