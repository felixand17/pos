<%= content_for(:content_header, 'Log Activity')%>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="clear"></div>

      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class='table table-hover'>
          <thead>
            <tr>
              <th>Version</th>
              <th>Date</th>
              <th>Author</th>
              <th>Object</th>
              <th>Object Id</th>
              <th>Event</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @logs.each do |version| %>
              <tr>
                <td><%= version.id %></td>
                <td><%= version.created_at.in_time_zone('Jakarta') %></td>
                <td><%= find_version_author_name(version.whodunnit) %></td>
                <td><%= version.item_type %></td>
                <td><%= version.item_id %></td>
                <td><%= version.event.humanize %></td>
                <td></td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%= paginate @logs %>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
